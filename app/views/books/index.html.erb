<h1>Books </h1>

<table>
    <tr>
      <th>title</th>
      <th>body</th></th>
    </tr>
    
     <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td> <%= link_to "show", "/books/#{book.id}" %></td>
      <td> <%= link_to "edit", "/books/#{book.id}/edit" %></td>
      <td> <%= link_to 'Destroy',book_path(book.id), method: :delete,"data-confirm" =>"本当に削除しますか？" %></td>
    </tr>
     <% end %>
  </table>



<h1>new book</h1>


<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: @book, url: '/books', method: :post do |f| %>
<h4>title</h4>
   <%= f.text_field :title %>
   
<h4>Body</h4>
   <%= f.text_area :body %>
   
 <p><%= f.submit 'Create Book' %></p>

 <% end %>